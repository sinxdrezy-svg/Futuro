let index = 0;
let score = 0;

const card = document.getElementById("card");
const rain = document.getElementById("rain");

function heartsRain(intensity = 30) {
  for (let i = 0; i < intensity; i++) {
    const h = document.createElement("span");
    h.innerHTML = "üíñ";
    h.style.left = Math.random() * 100 + "%";
    h.style.fontSize = (16 + Math.random() * 24) + "px";
    rain.appendChild(h);
    setTimeout(() => h.remove(), 2500);
  }
}

function showQuestion() {
  const q = questions[index];
  card.innerHTML = `
    <h2>${q.q}</h2>
    <button onclick="answer(true)">${q.yes}</button>
    <button onclick="answer(false)">${q.no}</button>
  `;
}

function answer(isPositive) {
  if (isPositive) {
    score++;
    heartsRain(45);
  }
  index++;
  index < questions.length ? showQuestion() : showReview();
}

function showReview() {
  card.innerHTML = `
    <h1>Antes de tudo</h1>
    <p>
      Cada resposta foi um sentimento.<br>
      O que aparece agora √© reflexo do que existe a√≠ dentro.
    </p>
    <button onclick="showFinal()">Ver o que isso diz sobre n√≥s</button>
  `;
}

function showFinal() {
  const percent = score / questions.length;

  if (percent >= 0.6) {
